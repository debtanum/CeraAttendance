<UserControl x:Class="CeraRegularize.Pages.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="380" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12">
            <TextBlock Text="Profile"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,10" />
            <GroupBox Header="General Detail">
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Employee Name:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <TextBlock x:Name="EmployeeNameValue"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Text="--"
                                   TextWrapping="Wrap" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Employee ID:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <TextBlock x:Name="EmployeeIdValue"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Text="--"
                                   TextWrapping="Wrap" />

                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Text="Designation:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <TextBlock x:Name="DesignationValue"
                                   Grid.Row="2"
                                   Grid.Column="1"
                                   Text="--"
                                   TextWrapping="Wrap" />

                        <TextBlock Grid.Row="3"
                                   Grid.Column="0"
                                   Text="Reporting Manager:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <TextBlock x:Name="ReportingManagerValue"
                                   Grid.Row="3"
                                   Grid.Column="1"
                                   Text="--"
                                   TextWrapping="Wrap" />
                    </Grid>

                    <TextBlock x:Name="ProfileStatusText"
                               Margin="0,4,0,0"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MutedTextBrush}"
                               Text="Profile not loaded." />
                </StackPanel>
            </GroupBox>

            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                Padding="12"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource DividerBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="LogoutButton"
                        Content="Logout"
                        Width="90"
                        Style="{StaticResource DangerButtonStyle}" Height="28" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

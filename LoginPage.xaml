<UserControl x:Class="CeraRegularize.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="380" d:DesignWidth="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12" Orientation="Vertical">
            <TextBlock Text="Login"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,10" />
            <GroupBox Header="Credentials">
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,8" Style="{StaticResource RowSpacingGridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Username:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <TextBox x:Name="UsernameBox"
                                 Grid.Row="0"
                                 Grid.Column="1"
                                 MinWidth="180" />

                        <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   Text="Password:"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" />
                        <Grid Grid.Row="1" Grid.Column="1" MinWidth="180">
                            <PasswordBox x:Name="PasswordBox"
                                         MinWidth="180"
                                         Padding="8,4,28,4" />
                            <TextBox x:Name="PasswordTextBox"
                                     Visibility="Collapsed"
                                     MinWidth="180"
                                     Padding="8,4,28,4" />
                            <ToggleButton x:Name="PasswordToggle"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,6,0"
                                          Width="20"
                                          Height="20"
                                          Padding="0"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          Foreground="{DynamicResource TextBrush}"
                                          BorderThickness="0"
                                          FontSize="16"
                                          FontWeight="SemiBold">
                                <Image x:Name="PasswordToggleIcon"
                                       Width="30"
                                       Height="30"
                                       Stretch="Uniform"
                                       Source="pack://application:,,,/Artifacts/monkey_hidden.png" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </ToggleButton>
                        </Grid>
                    </Grid>

                    <CheckBox x:Name="RememberCheckBox" Content="Remember me" Margin="0,0,0,4" />
                    <CheckBox x:Name="AutoLoginCheckBox" Content="Auto Login" Margin="0,0,0,8" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="LoginButton"
                                Content="Login"
                                Width="80"
                                Style="{StaticResource PrimaryButtonStyle}" Height="28" />
                    </StackPanel>

                    <TextBlock x:Name="LoginStatusText"
                               Margin="0,6,0,0"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MutedTextBrush}"
                               Text="Session Inactive" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>

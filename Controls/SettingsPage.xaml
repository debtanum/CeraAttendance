<UserControl x:Class="CeraRegularize.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="380" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12" Orientation="Vertical">
                <TextBlock x:Name="AppearanceTitle"
                           Text="Appearance"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,6" />
                <StackPanel Margin="0,0,0,12">
                    <RadioButton x:Name="ThemeSystemRadio"
                                 Content="Use system theme"
                                 GroupName="ThemeGroup" />
                    <RadioButton x:Name="ThemeLightRadio"
                                 Content="Force light"
                                 GroupName="ThemeGroup" />
                    <RadioButton x:Name="ThemeDarkRadio"
                                 Content="Force dark"
                                 GroupName="ThemeGroup" />
                </StackPanel>

                <TextBlock x:Name="LoggingTitle"
                           Text="Logging"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,6" />
                <CheckBox x:Name="LogEnableCheckBox"
                          Content="Enable log file (app.log, max 10 MB)"
                          Margin="0,0,0,6" />
                <GroupBox x:Name="LogLevelsGroupBox"
                          Header="Include levels in log file"
                          Margin="0,0,0,12">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="LogDebugCheckBox" Content="Debug" />
                        <CheckBox x:Name="LogInfoCheckBox" Content="Info" />
                        <CheckBox x:Name="LogWarningCheckBox" Content="Warning" />
                        <CheckBox x:Name="LogErrorCheckBox" Content="Error" />
                        <CheckBox x:Name="LogCriticalCheckBox" Content="Critical" />
                    </StackPanel>
                </GroupBox>

                <TextBlock x:Name="SelectionTitle"
                           Text="Calendar Selection Style"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,6" />
                <StackPanel Margin="0,0,0,12">
                    <RadioButton x:Name="SelectionPopupRadio"
                                 Content="Popup menu (tap to choose)"
                                 GroupName="SelectionGroup" />
                    <RadioButton x:Name="SelectionLoopRadio"
                                 Content="Loop through on click (WFO -> WFH -> Clear)"
                                 GroupName="SelectionGroup" />
                </StackPanel>

                <TextBlock x:Name="SyncTitle"
                           Text="Attendance Sync"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,6" />
                <CheckBox x:Name="AutoRefreshCheckBox"
                          Content="Enable auto-refresh of attendance history"
                          Margin="0,0,0,6" />
                <StackPanel x:Name="AutoRefreshRow"
                            Orientation="Horizontal"
                            Margin="0,0,0,12">
                    <TextBlock x:Name="AutoRefreshLabel"
                               Text="Auto-refresh interval (minutes)"
                               VerticalAlignment="Center" />
                    <TextBox x:Name="AutoRefreshTextBox"
                             Width="60"
                             Margin="8,0,0,0"
                             VerticalContentAlignment="Center" />
                    <TextBlock Text="min"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center" />
                </StackPanel>

                <TextBlock x:Name="AutomationTitle"
                           Text="Automation"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,6" />
                <CheckBox x:Name="HeadlessCheckBox"
                          Content="Enable headless browser (no UI)"
                          Margin="0,0,0,12" />
            </StackPanel>
        </ScrollViewer>
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                Padding="12"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource DividerBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="Save"
                        Width="80"
                        Margin="0,0,6,0"
                        Style="{StaticResource PrimaryButtonStyle}" Height="NaN" MinHeight="1" />
                <Button x:Name="ResetButton"
                        Content="Reset"
                        Width="80"
                        Style="{StaticResource NeutralButtonStyle}" Height="28" MinHeight="1" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
